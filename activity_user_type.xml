<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.infoappsolution.loadmaal.UserType">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/makedelivery"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:background="@drawable/ractangle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Make Delivery"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_below="@+id/makedelivery"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <View
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#fff"
                >
            </View>
            <TextView
                android:layout_weight=".1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#fff"
                />
            <View
                android:layout_weight=".5"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#fff"
                >
            </View>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/need_vehical"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/line"
            android:background="@drawable/ractangle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Track Delivery"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
